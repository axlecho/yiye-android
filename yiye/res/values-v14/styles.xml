<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->


    <!-- the theme applied to the application or activity -->
    <style name="NormalActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/NormalActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>

    <style name="NormalActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/Teal500</item>
        <item name="android:titleTextStyle">@style/NormalActionBarTitleStyle</item>
        <item name="android:displayOptions"></item>
        <item name="displayOptions"></item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="NormalActionBarTitleStyle">
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">@dimen/actionbar_font_size</item>
    </style>


    <!-- ä¸»activity sytle -->
    <style name="MainActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MainActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="MainActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:title">@string/drawer_open</item>
        <item name="android:background">@color/Teal500</item>
        <item name="android:titleTextStyle">@style/MainActionBarTitleStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="MainActionBarTitleStyle">
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">@dimen/actionbar_font_size</item>
        <item name="android:background">@drawable/actionbar_title_background</item>
    </style>
</resources>