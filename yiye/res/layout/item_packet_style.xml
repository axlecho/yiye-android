<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.makeramen.RoundedImageView
        android:id="@+id/imageview_packet_item_background"
        android:padding="5dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textview_over_item_news"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/default_packetitem_newnumber_describe"
        android:textColor="@color/Purple500"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview_over_item_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/default_packetitem_describe"
        android:textColor="@color/Grey700"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/imageview_packet_item_background"
        android:layout_toRightOf="@id/imageview_packet_item_background" />


</RelativeLayout>