<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.makeramen.RoundedImageView
        android:id="@+id/imageview_packet_item_background"
        android:padding="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textview_packet_item_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_packetitem_newnumber_describe"
        android:textColor="@color/Purple600"
        android:textSize="14sp"
        android:layout_alignTop="@id/imageview_packet_item_background"
        android:layout_toRightOf="@id/imageview_packet_item_background"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-15dp" />

    <TextView
        android:id="@+id/textview_packet_item_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/default_packetitem_describe"
        android:textColor="@color/Grey700"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/imageview_packet_item_background"
        android:layout_toRightOf="@id/imageview_packet_item_background" />


    <TextView
        android:id="@+id/textview_packet_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/imageview_packet_item_background"
        android:textSize="14dp"
        android:textColor="@color/Grey400"
        android:text="11-12"
        android:padding="5dp"/>
</RelativeLayout>